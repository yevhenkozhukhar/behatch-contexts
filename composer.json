{
    "name": "behatch/contexts",
    "description": "Behatch contexts",
    "keywords": [
        "BDD",
        "Behat",
        "Symfony",
        "Context"
    ],
    "type": "library",
    "license": "beerware",
    "require": {
        "php": "^8.0",
        "ext-dom": "*",
        "ext-libxml": "*",
        "ext-simplexml": "*",
        "behat/behat": "^3.8",
        "friends-of-behat/mink-extension": "^2.5",
        "justinrainbow/json-schema": "^5.2",
        "symfony/dom-crawler": "^4.4|^5.3|^6.0|^7.0",
        "symfony/http-foundation": "^5.3|^6.0|^7.0",
        "symfony/property-access": "^5.3|^6.0|^7.0"
    },
    "require-dev": {
        "atoum/atoum": "^4.0",
        "behat/mink-goutte-driver": "^1.2",
        "behat/mink-selenium2-driver": "^1.4",
        "fabpot/goutte": "^3.3",
        "guzzlehttp/guzzle": "^6.5"
    },
    "autoload": {
        "psr-4": {
            "Behatch\\": "src/"
        }
    },
    "config": {
        "bin-dir": "bin/"
    },
    "replace": {
        "sanpi/behatch-contexts": "self.version",
        "behatch/contexts": "self.version"
    }
}
